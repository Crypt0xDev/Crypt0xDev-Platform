---
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
import site from "../content/site";
import "../styles/global.css";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
  title: string;
  description?: string;
  icon?: string;
  image?: string;
  canonical?: string;
  lang?: string;
  robots?: string;
  author?: string;
  keywords?: string;
  type?: string;
  pubDate?: Date;
  modDate?: Date;
  section?: string;
  tags?: string[];
}

const {
  title,
  description,
  icon,
  image,
  canonical,
  lang = "es",
  robots = "index, follow",
  author,
  keywords,
  type = "website",
  pubDate,
  modDate,
  section,
  tags,
} = Astro.props as Props;

const metaTitle = title ? `${site.siteTitle} - ${title}` : site.siteTitle;
const metaDescription = description || site.description;
const metaImage = image ? new URL(image, site.siteUrl).href : new URL(site.defaultImage, site.siteUrl).href;
const metaCanonical = canonical || new URL(Astro.url.pathname, site.siteUrl).href;
const metaAuthor = author || site.author;
const locale = lang === 'es' ? 'es_ES' : 'en_US';
const alternateLocale = lang === 'es' ? 'en_US' : 'es_ES';
const alternateLang = lang === 'es' ? 'en' : 'es';
const alternateUrl = metaCanonical.replace(`/${lang}/`, `/${alternateLang}/`);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={icon ?? "/favicons/favicon.svg"} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="robots" content={robots} />
    <meta name="author" content={metaAuthor} />
    {keywords && <meta name="keywords" content={keywords} />}
    <link rel="canonical" href={metaCanonical} />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="language" content={lang === 'es' ? 'Spanish' : 'English'} />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />
    <meta name="distribution" content="global" />
    <meta name="classification" content="Cybersecurity, Education, Technology" />
    
    <!-- Security Headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta name="referrer" content="no-referrer-when-downgrade" />
    
    <!-- Performance Hints -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    
    <!-- Preload Critical Fonts -->
    <link 
      rel="preload" 
      href="/fonts/inter/Inter-Regular.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin 
    />
    <link 
      rel="preload" 
      href="/fonts/inter/Inter-SemiBold.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin 
    />
    <link 
      rel="preload" 
      href="/fonts/jetbrains/JetBrainsMono-Regular.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin 
    />
    
    <!-- Preload CSS -->
    <link rel="preload" href="/fonts/fonts.css" as="style" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#6366f1" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1e293b" />
    <meta name="msapplication-TileColor" content="#6366f1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <!-- Alternate Languages (hreflang) -->
    <link rel="alternate" hreflang={lang} href={metaCanonical} />
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
    <link rel="alternate" hreflang="x-default" href={metaCanonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={metaCanonical} />
    <meta property="og:image" content={metaImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={metaTitle} />
    <meta property="og:site_name" content={site.siteTitle} />
    <meta property="og:locale" content={locale} />
    <meta property="og:locale:alternate" content={alternateLocale} />
    
    <!-- Article Meta Tags (for blog posts and writeups) -->
    {type === "article" && pubDate && (
      <>
        <meta property="article:published_time" content={pubDate.toISOString()} />
        {modDate && <meta property="article:modified_time" content={modDate.toISOString()} />}
        <meta property="article:author" content={metaAuthor} />
        {section && <meta property="article:section" content={section} />}
        {tags && tags.map(tag => <meta property="article:tag" content={tag} />)}
      </>
    )}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={site.twitter} />
    <meta name="twitter:creator" content={site.twitter} />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={metaImage} />
    <meta name="twitter:image:alt" content={metaTitle} />

    <!-- PWA / Mobile -->
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- Theme script (must be in head to prevent flash) -->
    <script is:inline src="/scripts/theme.js"></script>

    <!-- Structured Data: WebSite -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        url: site.siteUrl,
        name: site.siteTitle,
        description: site.description,
        inLanguage: lang,
        potentialAction: {
          "@type": "SearchAction",
          target: `${site.siteUrl}/${lang}/search?q={search_term_string}`,
          "query-input": "required name=search_term_string"
        },
        publisher: {
          "@type": "Person",
          name: site.author,
          url: site.siteUrl
        }
      })}
    />

    <!-- Structured Data: Organization/Person -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: site.author,
        url: site.siteUrl,
        image: `${site.siteUrl}/author-photo.jpg`,
        sameAs: [
          site.twitter ? `https://twitter.com/${site.twitter.replace('@', '')}` : null,
          site.github
        ].filter(Boolean),
        jobTitle: "Cybersecurity Researcher & Penetration Tester",
        description: "Experto en ciberseguridad, pentesting y hacking ético. Creador de contenido educativo sobre seguridad informática.",
        knowsAbout: ["Cybersecurity", "Penetration Testing", "Ethical Hacking", "CTF", "Web Security", "Network Security", "Vulnerability Assessment"],
        alumniOf: {
          "@type": "Organization",
          name: "Cybersecurity Professional"
        }
      })}
    />
    
    <!-- Structured Data: BreadcrumbList (if not homepage) -->
    {Astro.url.pathname !== '/' && Astro.url.pathname !== `/${lang}` && Astro.url.pathname !== `/${lang}/` && (
      <script
        type="application/ld+json"
        set:html={JSON.stringify({
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          itemListElement: [
            {
              "@type": "ListItem",
              position: 1,
              name: "Home",
              item: `${site.siteUrl}/${lang}`
            },
            {
              "@type": "ListItem",
              position: 2,
              name: title,
              item: metaCanonical
            }
          ]
        })}
      />
    )}
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <SpeedInsights />
  </body>
</html>
