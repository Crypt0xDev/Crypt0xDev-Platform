---
interface Props {
  placeholder?: string;
  className?: string;
}

const { placeholder = 'Buscar...', className = '' } = Astro.props;
---

<div class={`relative ${className}`}>
  <div class="relative flex items-center gap-3 py-3 px-4 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg transition-all duration-200 focus-within:border-indigo-500 dark:focus-within:border-indigo-400 focus-within:ring-4 focus-within:ring-indigo-500/10 dark:focus-within:ring-indigo-400/10">
    <svg class="w-5 h-5 text-slate-400 dark:text-slate-500 flex-shrink-0" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
      <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    </svg>
    <input 
      type="search" 
      class="flex-1 border-0 outline-none bg-transparent text-slate-900 dark:text-slate-100 text-[0.9375rem] placeholder:text-slate-400 dark:placeholder:text-slate-500"
      placeholder={placeholder}
      autocomplete="off"
      aria-label="Buscar"
    />
    <kbd class="hidden md:flex items-center gap-1 py-1 px-2 bg-slate-100 dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded text-xs text-slate-500 dark:text-slate-400">
      <span class="font-sans">âŒ˜</span>
      <span class="font-sans">K</span>
    </kbd>
  </div>
</div>
