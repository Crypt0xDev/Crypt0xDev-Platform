---
export interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="mb-8 rounded-lg px-4 py-3 border bg-slate-100 border-slate-200 dark:bg-slate-800/80 dark:border-slate-700 backdrop-blur-sm transition-colors duration-200" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-2 text-sm flex-wrap">
    {items.map((item, index) => (
      <li class="inline-flex items-center">
        {index > 0 && (
          <span class="mx-2 text-slate-400 dark:text-slate-500">/</span>
        )}
        {item.href ? (
          <a 
            href={item.href} 
            class="font-medium transition-colors duration-200 text-slate-700 hover:text-indigo-600 dark:text-slate-300 dark:hover:text-indigo-400"
          >
            {item.label}
          </a>
        ) : (
          <span class="font-semibold truncate max-w-xs text-slate-900 dark:text-white">
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>
