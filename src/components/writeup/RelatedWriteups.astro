---
import { formatDate } from '@i18n/utils';

interface Writeup {
  id?: string;
  slug: string;
  collection?: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    platform: string;
    difficulty: 'easy' | 'medium' | 'hard' | 'insane';
    os: string;
    tags?: string[];
    language: string;
    heroImage?: string;
    logo?: string;
  };
}

interface Props {
  writeups: Writeup[];
  title: string;
  lang: string;
}

const { writeups, title, lang } = Astro.props;

// Mapeo de nombres de plataformas
const platformNames: Record<string, string> = {
  htb: 'HackTheBox',
  hackthebox: 'HackTheBox',
  tryhackme: 'TryHackMe',
  vulnhub: 'VulnHub',
  hackmyvm: 'HackMyVM',
  portswigger: 'PortSwigger'
};

// Generar URL correcta para writeups
const getWriteupUrl = (writeup: Writeup) => {
  const slugParts = writeup.slug.split('/');
  if (slugParts.length >= 3) {
    const platform = slugParts[1];
    const machineName = slugParts.slice(2).join('/');
    return `/${lang}/writeup/${platform}/${machineName}`;
  }
  const cleanedSlug = writeup.slug.replace(/^(es|en)\//, '');
  return `/${lang}/writeup/${cleanedSlug}`;
};

// Obtener nombre limpio de la m√°quina
const getMachineName = (title: string) => {
  return title.split(' - ')[0];
};
---

{writeups.length > 0 && (
  <section class="related-writeups-container">
    <h2 class="related-title">
      {title}
    </h2>
    <div class="related-grid">
      {writeups.map((writeup) => {
        const writeupUrl = getWriteupUrl(writeup);
        const machineName = getMachineName(writeup.data.title);
        const machineLogo = writeup.data.logo || `/images/platforms/${writeup.data.platform}/machines.png`;
        
        return (
          <a 
            href={writeupUrl}
            class="related-card"
          >
            {/* Logo circular con gradiente */}
            <div class="related-logo-container">
              <div class="related-logo-ring bg-gradient-to-br from-blue-500 to-purple-600">
                <div class="related-logo-inner">
                  <img 
                    src={machineLogo} 
                    alt={machineName}
                    loading="lazy"
                    class="related-logo-img"
                  />
                </div>
              </div>
            </div>

            {/* Badges */}
            <div class="related-badges">
              <span class="related-badge bg-blue-500/20 border border-blue-500/50 text-blue-400">
                {platformNames[writeup.data.platform]?.toUpperCase() || writeup.data.platform.toUpperCase()}
              </span>
              <span class={`related-badge ${
                writeup.data.difficulty === 'easy' ? 'bg-emerald-500/20 border-emerald-500/50 text-emerald-400' :
                writeup.data.difficulty === 'medium' ? 'bg-amber-500/20 border-amber-500/50 text-amber-400' :
                writeup.data.difficulty === 'hard' ? 'bg-red-500/20 border-red-500/50 text-red-400' :
                'bg-purple-500/20 border-purple-500/50 text-purple-400'
              }`}>
                {writeup.data.difficulty.toUpperCase()}
              </span>
            </div>

            {/* T√≠tulo y descripci√≥n */}
            <h3 class="related-card-title">
              {machineName}
              <span class="related-card-platform"> - {platformNames[writeup.data.platform] || writeup.data.platform}</span>
            </h3>
            
            <p class="related-card-description">
              {writeup.data.description}
            </p>

            {/* Metadata */}
            <div class="related-metadata">
              <div class="related-meta-item">
                <span>{writeup.data.os === 'linux' ? 'üêß' : writeup.data.os === 'windows' ? 'ü™ü' : 'üíª'}</span>
                <span class="capitalize">{writeup.data.os}</span>
              </div>
              <div class="related-meta-item">
                <span>{writeup.data.difficulty === 'easy' ? '‚óè' : writeup.data.difficulty === 'medium' ? '‚óè‚óè' : writeup.data.difficulty === 'hard' ? '‚óè‚óè‚óè' : '‚óè‚óè‚óè‚óè'}</span>
                <span class="capitalize">{writeup.data.difficulty}</span>
              </div>
              <div class="related-meta-item">
                <span>‚≠ê</span>
                <span>20</span>
              </div>
              <div class="related-meta-item">
                <span>üìÖ</span>
                <span>{formatDate(writeup.data.pubDate, lang).split(' ').slice(0, 3).join(' ')}</span>
              </div>
            </div>

            {/* Tags */}
            {writeup.data.tags && writeup.data.tags.length > 0 && (
              <div class="related-tags">
                {writeup.data.tags.slice(0, 3).map((tag: string) => (
                  <span class="related-tag">
                    #{tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        );
      })}
    </div>
  </section>
)}

<style>
  .related-writeups-container {
    margin-top: 3rem;
  }

  .related-title {
    font-size: 2rem;
    font-weight: 900;
    color: rgba(99, 102, 241, 1);
    margin-bottom: 2rem;
    text-align: center;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .related-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.9) 100%);
    border-radius: 1.5rem;
    overflow: hidden;
    border: 2px solid rgba(100, 116, 139, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 1.5rem;
    text-decoration: none;
    display: block;
  }

  .related-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 25px 50px -12px rgba(99, 102, 241, 0.25);
    border-color: rgba(99, 102, 241, 0.5);
  }

  /* Logo circular */
  .related-logo-container {
    position: relative;
    padding: 2rem 1.5rem 1rem;
    display: flex;
    justify-content: center;
  }

  .related-logo-ring {
    position: relative;
    width: 8rem;
    height: 8rem;
    border-radius: 50%;
    padding: 0.25rem;
    transition: transform 0.3s ease;
  }

  .related-card:hover .related-logo-ring {
    transform: rotate(6deg) scale(1.1);
  }

  .related-logo-inner {
    width: 100%;
    height: 100%;
    background: rgba(15, 23, 42, 1);
    border-radius: 50%;
    padding: 0.5rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .related-logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .related-card:hover .related-logo-img {
    transform: scale(1.1);
  }

  /* Badges */
  .related-badges {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .related-badge {
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: all 0.2s ease;
  }

  .related-badge:hover {
    transform: scale(1.1);
  }

  /* T√≠tulo */
  .related-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    text-align: center;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }

  .related-card:hover .related-card-title {
    color: rgba(99, 102, 241, 1);
  }

  .related-card-platform {
    color: rgba(148, 163, 184, 1);
    font-weight: 400;
  }

  /* Descripci√≥n */
  .related-card-description {
    font-size: 0.875rem;
    color: rgba(148, 163, 184, 1);
    text-align: center;
    margin-bottom: 1rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Metadata */
  .related-metadata {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.75rem;
    color: rgba(148, 163, 184, 1);
    flex-wrap: wrap;
  }

  .related-meta-item {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  /* Tags */
  .related-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }

  .related-tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background: rgba(99, 102, 241, 0.2);
    border: 1px solid rgba(99, 102, 241, 0.3);
    color: rgba(165, 180, 252, 1);
    border-radius: 9999px;
    transition: all 0.2s ease;
  }

  .related-tag:hover {
    background: rgba(99, 102, 241, 0.3);
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .related-grid {
      grid-template-columns: 1fr;
    }

    .related-logo-ring {
      width: 6rem;
      height: 6rem;
    }

    .related-title {
      font-size: 1.5rem;
    }
  }
</style>
