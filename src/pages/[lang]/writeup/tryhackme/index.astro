---
import { getCollection } from 'astro:content';
import Layout from '../../../../layouts/Layout.astro';
import { useTranslations } from '../../../../i18n/core';
import { sortByDate, filterByLang } from '../../../../i18n/utils';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');

// Obtener todos los writeups de TryHackMe
const allWriteups = await getCollection('writeups');
const thmWriteups = sortByDate(
  filterByLang(allWriteups, lang as string).filter(w => w.data.platform === 'tryhackme')
);

// Definir categor√≠as disponibles
const categories = [
  { id: 'rooms', name: 'Rooms', icon: 'üö™' },
  { id: 'paths', name: 'Paths', icon: 'üõ§Ô∏è' },
  { id: 'challenges', name: 'Challenges', icon: 'ÔøΩ' }
];
---

<Layout
  title={`TryHackMe`}
  description={lang === 'es' ? 'TryHackMe' : 'TryHackMe'}
  lang={lang}
>
  <main class="thm-writeups">
    <div class="container">
      <!-- Header -->
      <header class="platform-header">
        <a href={`/${lang}/writeup`} class="back-link inline-flex items-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-600 text-white font-semibold rounded-lg transition-all duration-200 no-underline mb-6">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          {lang === 'es' ? 'Volver a Writeups' : 'Back to Writeups'}
        </a>
        <div class="platform-info">
          <div class="platform-logo">
            <img 
              src="/images/platforms/tryhackme.jpg" 
              alt="TryHackMe"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <span class="platform-fallback">üéì</span>
          </div>
          <h1 class="platform-name">TryHackMe</h1>
        </div>
      </header>

      <!-- Men√∫ de categor√≠as -->
      <nav class="category-menu">
        {categories.map((category) => {
          const count = thmWriteups.filter(w => w.data.category === category.id).length;
          return (
            <a 
              href={`/${lang}/writeup/tryhackme/${category.id}`}
              class="category-btn" 
              data-category={category.id}
              data-active="false"
            >
              <div class="category-icon-wrapper">
                <img 
                  src={`/images/platforms/tryhackme/${category.id}.png`}
                  alt={category.name}
                  class="category-image"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                />
                <span class="category-icon">{category.icon}</span>
              </div>
              <div class="category-info">
                <span class="category-name">{category.name}</span>
                <div class="category-stats">
                  <span class="category-count">{count}</span>
                </div>
              </div>
            </a>
          );
        })}
      </nav>

      {thmWriteups.length === 0 && (
        <div class="empty-state">
          <p>{lang === 'es' ? 'No hay writeups disponibles a√∫n' : 'No writeups available yet'}</p>
        </div>
      )}
    </div>
  </main>
</Layout>


<style>
  .thm-writeups {
    min-height: 100vh;
    padding: 2rem 0 4rem;
    background: linear-gradient(135deg, 
      var(--bg-color) 0%, 
      color-mix(in srgb, var(--bg-color) 97%, #7c3aed 3%) 100%
    );
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .platform-header {
    margin-bottom: 3rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    animation: fadeInDown 0.6s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #7c3aed;
    text-decoration: none;
    font-size: 0.95rem;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
    font-weight: 600;
    align-self: flex-start;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    background: rgba(124, 58, 237, 0.08);
  }

  .back-link:hover {
    color: #6d28d9;
    transform: translateX(-4px);
    background: rgba(124, 58, 237, 0.15);
  }

  .platform-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .platform-name {
    font-size: 3rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--text-color), #7c3aed);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: center;
    font-family: 'Inter', sans-serif;
    letter-spacing: -0.02em;
    position: relative;
    margin: 0;
  }

  .platform-name::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 3px;
    background: linear-gradient(90deg, 
      transparent, 
      #7c3aed, 
      transparent
    );
    border-radius: 2px;
    box-shadow: 0 2px 8px rgba(124, 58, 237, 0.3);
  }

  /* Men√∫ de categor√≠as */
  .category-menu {
    display: flex;
    justify-content: center;
    gap: 2.5rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .category-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 0;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    color: var(--text-color);
    position: relative;
    text-decoration: none;
    animation: scaleIn 0.5s ease-out both;
  }

  .category-btn:nth-child(1) { animation-delay: 0.1s; }
  .category-btn:nth-child(2) { animation-delay: 0.2s; }
  .category-btn:nth-child(3) { animation-delay: 0.3s; }

  .category-btn:hover {
    transform: translateY(-8px);
  }

  .category-btn::before {
    content: '';
    position: absolute;
    inset: -8px;
    background: linear-gradient(135deg, 
      rgba(124, 58, 237, 0.1), 
      rgba(109, 40, 217, 0.1)
    );
    border-radius: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .category-btn:hover::before {
    opacity: 1;
  }

  .category-btn:hover .category-icon-wrapper {
    border-color: #7c3aed;
    box-shadow: 0 12px 30px -8px rgba(124, 58, 237, 0.4);
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.1), rgba(109, 40, 217, 0.1));
  }

  .category-btn[data-active="true"] .category-icon-wrapper {
    border-color: #7c3aed;
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.15), rgba(109, 40, 217, 0.15));
    box-shadow: 0 8px 30px -8px rgba(124, 58, 237, 0.5);
  }

  .category-btn[data-active="true"] .category-name {
    color: #7c3aed;
  }

  .category-icon-wrapper {
    width: 140px;
    height: 140px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, 
      var(--card-bg) 0%, 
      color-mix(in srgb, var(--card-bg) 95%, #7c3aed 5%) 100%
    );
    border-radius: 1.5rem;
    border: 3px solid var(--border-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
  }

  .category-icon-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(124, 58, 237, 0.1), 
      rgba(109, 40, 217, 0.1)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-btn:hover .category-icon-wrapper::before {
    opacity: 1;
  }

  .category-btn:hover .category-icon-wrapper {
    border-color: #7c3aed;
    box-shadow: 0 12px 30px rgba(124, 58, 237, 0.2);
    transform: scale(1.05);
  }

  .category-image {
    width: 75%;
    height: 75%;
    object-fit: contain;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1));
  }

  .category-icon {
    font-size: 3.5rem;
    line-height: 1;
    display: none;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1));
  }

  .category-btn:hover .category-image {
    transform: scale(1.1) rotate(3deg);
    filter: drop-shadow(0 4px 12px rgba(124, 58, 237, 0.3));
  }

  .category-btn:hover .category-icon {
    transform: scale(1.1) rotate(3deg);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .category-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .category-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-color);
    transition: all 0.3s ease;
    font-family: 'Inter', sans-serif;
    letter-spacing: -0.01em;
  }

  .category-btn:hover .category-name {
    color: #7c3aed;
  }

  .category-stats {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .category-count {
    font-size: 1.125rem;
    font-weight: 700;
    color: #7c3aed;
    background: linear-gradient(135deg, 
      rgba(124, 58, 237, 0.15), 
      rgba(124, 58, 237, 0.08)
    );
    padding: 0.375rem 1rem;
    border-radius: 0.75rem;
    border: 2px solid rgba(124, 58, 237, 0.3);
    transition: all 0.3s ease;
    font-family: 'Inter', sans-serif;
  }

  .category-btn:hover .category-count {
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
  }

  .platform-logo {
    width: 180px;
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, 
      var(--card-bg) 0%, 
      color-mix(in srgb, var(--card-bg) 95%, #7c3aed 5%) 100%
    );
    border: 3px solid var(--border-color);
    border-radius: 1.5rem;
    padding: 1.5rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
    animation: scaleIn 0.6s ease-out;
  }

  .platform-logo:hover {
    transform: scale(1.05) rotate(2deg);
    box-shadow: 0 12px 40px rgba(124, 58, 237, 0.15);
    border-color: #7c3aed;
  }

  .platform-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1));
    transition: filter 0.3s ease;
  }

  .platform-logo:hover img {
    filter: drop-shadow(0 4px 12px rgba(124, 58, 237, 0.3));
  }

  .platform-fallback {
    display: none;
    font-size: 4rem;
  }

  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    color: var(--text-muted);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .platform-header {
      margin-bottom: 1.5rem;
    }

    .category-menu {
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .category-icon-wrapper {
      width: 100px;
      height: 100px;
    }

    .category-icon {
      font-size: 2.5rem;
    }

    .category-name {
      font-size: 1rem;
    }

    .category-count {
      font-size: 0.875rem;
    }

    .platform-info {
      gap: 1.25rem;
    }

    .platform-logo {
      width: 110px;
      height: 110px;
    }

    .platform-name {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 480px) {
    .category-menu {
      gap: 1rem;
    }

    .category-icon-wrapper {
      width: 80px;
      height: 80px;
    }

    .category-icon {
      font-size: 2rem;
    }

    .category-name {
      font-size: 0.875rem;
    }

    .category-count {
      font-size: 0.75rem;
      padding: 0.2rem 0.5rem;
    }

    .platform-logo {
      width: 90px;
      height: 90px;
    }

    .platform-name {
      font-size: 2rem;
    }
  }
</style>

