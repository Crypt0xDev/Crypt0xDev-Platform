---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import TOC from '@components/common/TOC.astro';
import Breadcrumb from '@components/common/Breadcrumb.astro';
import RelatedWriteups from '@components/writeup/RelatedWriteups.astro';
import { useTranslations } from '@i18n/core';
import { PLATFORMS, getPlatform } from '@i18n/constants/platforms';

export async function getStaticPaths() {
  const allWriteups = await getCollection('writeups');
  
  return allWriteups.map(entry => {
    const slugParts = entry.slug.split('/');
    const lang = slugParts[0];
    const platformSlug = slugParts[1];
    const actualSlug = slugParts.slice(2).join('/');
    const platformId = entry.data.platform;
    
    return {
      params: { lang, platform: platformSlug, slug: actualSlug },
      props: { entry, platformId },
    };
  });
}

const { entry, platformId } = Astro.props;
const { Content, headings } = await entry.render();
const { lang, platform: platformSlug } = Astro.params;

const platformData = getPlatform(platformId);
const t = useTranslations(lang as 'es' | 'en');

// Traducciones
const translations = {
  es: {
    breadcrumbHome: 'Inicio',
    breadcrumbWriteups: 'Writeups',
    difficulty: 'Dificultad',
    platform: 'Plataforma',
    category: 'Categor√≠a',
    os: 'Sistema Operativo',
    publishedOn: 'Publicado el',
    tags: 'Etiquetas',
    retired: 'Retirada',
    active: 'Activa',
    estimatedTime: 'Tiempo Estimado',
    points: 'Puntos',
    rating: 'Valoraci√≥n',
    easy: 'F√°cil',
    medium: 'Medio',
    hard: 'Dif√≠cil',
    insane: 'Insano'
  },
  en: {
    breadcrumbHome: 'Home',
    breadcrumbWriteups: 'Writeups',
    difficulty: 'Difficulty',
    platform: 'Platform',
    category: 'Category',
    os: 'Operating System',
    publishedOn: 'Published on',
    tags: 'Tags',
    retired: 'Retired',
    active: 'Active',
    estimatedTime: 'Estimated Time',
    points: 'Points',
    rating: 'Rating',
    easy: 'Easy',
    medium: 'Medium',
    hard: 'Hard',
    insane: 'Insane'
  }
}[lang as 'es' | 'en'];

const difficultyColors = {
  easy: 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300',
  medium: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300',
  hard: 'bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300',
  insane: 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300'
};

// Obtener writeups relacionados (misma plataforma, misma dificultad o tags similares)
const allWriteupsForRelated = await getCollection('writeups');
const relatedWriteups = allWriteupsForRelated
  .filter(w => {
    // Filtrar por idioma
    if (!w.slug.startsWith(`${lang}/`)) return false;
    // Excluir el writeup actual
    if (w.slug === entry.slug) return false;
    
    // Relacionados: misma plataforma O misma dificultad O tags en com√∫n
    const samePlatform = w.data.platform === entry.data.platform;
    const sameDifficulty = w.data.difficulty === entry.data.difficulty;
    const commonTags = entry.data.tags?.some(tag => w.data.tags?.includes(tag));
    
    return samePlatform || sameDifficulty || commonTags;
  })
  .sort((a, b) => {
    // Priorizar por m√°s similitud
    let scoreA = 0;
    let scoreB = 0;
    
    if (a.data.platform === entry.data.platform) scoreA += 3;
    if (b.data.platform === entry.data.platform) scoreB += 3;
    
    if (a.data.difficulty === entry.data.difficulty) scoreA += 2;
    if (b.data.difficulty === entry.data.difficulty) scoreB += 2;
    
    const tagsA = entry.data.tags?.filter(tag => a.data.tags?.includes(tag)).length || 0;
    const tagsB = entry.data.tags?.filter(tag => b.data.tags?.includes(tag)).length || 0;
    scoreA += tagsA;
    scoreB += tagsB;
    
    return scoreB - scoreA;
  })
  .slice(0, 3); // Mostrar solo 3 writeups relacionados
---

<Layout 
  title={entry.data.title} 
  description={entry.data.description}
  lang={lang as 'es' | 'en'}
>
  <article class="writeup-article">
    <!-- Breadcrumbs -->
    <Breadcrumb items={[
      { label: translations.breadcrumbHome, href: `/${lang}` },
      { label: translations.breadcrumbWriteups, href: `/${lang}/writeup` },
      { label: platformData.name, href: `/${lang}/writeup/${platformSlug}` },
      ...(entry.data.category ? [{ label: entry.data.category, href: `/${lang}/writeup/${platformSlug}/${entry.data.category}` }] : []),
      { label: entry.data.title }
    ]} />

    <!-- Hero Image -->
    {entry.data.heroImage && (
      <div class="hero-image-container">
        <img 
          src={entry.data.heroImage} 
          alt={entry.data.title}
          class="hero-image"
        />
      </div>
    )}

    <!-- Header -->
    <header class="writeup-header">
      <!-- Title -->
      <h1 class="writeup-title bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
        {entry.data.title}
      </h1>

      <!-- Description -->
      <p class="writeup-description">
        {entry.data.description}
      </p>

      <!-- Badges principales - Clickeables -->
      <div class="badges-row">
        <a 
          href={`/${lang}/writeup/${platformSlug}`}
          class="badge badge-platform bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 border-blue-500/20"
        >
          {platformData.name}
        </a>
        <a 
          href={`/${lang}/tag/${entry.data.difficulty.toLowerCase()}`}
          class={`badge badge-difficulty ${difficultyColors[entry.data.difficulty]}`}
        >
          {translations[entry.data.difficulty]}
        </a>
        <a 
          href={`/${lang}/tag/${entry.data.os.toLowerCase()}`}
          class="badge badge-os"
        >
          {entry.data.os === 'linux' ? 'üêß' : entry.data.os === 'windows' ? 'ü™ü' : 'üíª'} {entry.data.os}
        </a>
        {entry.data.retired !== undefined && (
          <span class={`badge ${entry.data.retired ? 'badge-retired' : 'badge-active'}`}>
            {entry.data.retired ? translations.retired : translations.active}
          </span>
        )}
        {entry.data.points && (
          <span class="badge badge-points">
            ‚≠ê {entry.data.points} {translations.points}
          </span>
        )}
      </div>

      <!-- Metadata compacta -->
      <div class="metadata-row">
        <span>
          üìÖ {entry.data.pubDate.toLocaleDateString(lang as string, {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </span>
        {entry.data.estimatedTime && (
          <span>‚è±Ô∏è {entry.data.estimatedTime}</span>
        )}
      </div>

      {/* Secci√≥n de tags y clasificaciones - Compacta */}
      <div class="metadata-container">
        {/* Vectores de Ataque */}
        {entry.data.attackVectors && entry.data.attackVectors.length > 0 && (
          <div class="metadata-section">
            <h3 class="metadata-title">{lang === 'es' ? 'Vectores de Ataque:' : 'Attack Vectors:'}</h3>
            <div class="metadata-tags">
              {entry.data.attackVectors.map((vector: string) => (
                <a 
                  href={`/${lang}/tag/${vector.toLowerCase().replace(/\s+/g, '-')}`}
                  class="metadata-tag tag-attack"
                >
                  {vector}
                </a>
              ))}
            </div>
          </div>
        )}

        {/* T√©cnicas MITRE ATT&CK */}
        {entry.data.techniques && entry.data.techniques.length > 0 && (
          <div class="metadata-section">
            <h3 class="metadata-title">{lang === 'es' ? 'T√©cnicas MITRE:' : 'MITRE Techniques:'}</h3>
            <div class="metadata-tags">
              {entry.data.techniques.map((technique: string) => (
                <a 
                  href={`/${lang}/tag/${technique.toLowerCase().replace(/\s+/g, '-')}`}
                  class="metadata-tag tag-technique"
                >
                  {technique}
                </a>
              ))}
            </div>
          </div>
        )}

        {/* Vulnerabilidades */}
        {entry.data.vulnerabilities && entry.data.vulnerabilities.length > 0 && (
          <div class="metadata-section">
            <h3 class="metadata-title">{lang === 'es' ? 'Vulnerabilidades:' : 'Vulnerabilities:'}</h3>
            <div class="metadata-tags">
              {entry.data.vulnerabilities.map((vuln: string) => (
                <a 
                  href={`/${lang}/tag/${vuln.toLowerCase().replace(/\s+/g, '-')}`}
                  class="metadata-tag tag-vulnerability"
                >
                  {vuln}
                </a>
              ))}
            </div>
          </div>
        )}

        {/* Certificaciones */}
        {entry.data.certifications && entry.data.certifications.length > 0 && (
          <div class="metadata-section">
            <h3 class="metadata-title">{lang === 'es' ? 'Certificaciones:' : 'Certifications:'}</h3>
            <div class="metadata-tags">
              {entry.data.certifications.map((cert: string) => (
                <a 
                  href={`/${lang}/tag/${cert.toLowerCase().replace(/\s+/g, '-')}`}
                  class="metadata-tag tag-certification"
                >
                  {cert}
                </a>
              ))}
            </div>
          </div>
        )}

        {/* Etiquetas */}
        {entry.data.tags && entry.data.tags.length > 0 && (
          <div class="metadata-section">
            <div class="metadata-tags">
              {entry.data.tags.map((tag: string) => (
                <a 
                  href={`/${lang}/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                  class="metadata-tag tag-general"
                >
                  {tag}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </header>


    <!-- Content & TOC -->
    <div class="content-container">
      <div class="content-wrapper">
        <div class="main-content prose prose-lg dark:prose-invert 
                    prose-headings:font-inter prose-headings:font-bold prose-headings:text-gray-900 dark:prose-headings:text-white 
                    prose-p:font-inter prose-p:text-gray-700 dark:prose-p:text-gray-300 prose-p:leading-relaxed
                    prose-li:font-inter prose-li:text-gray-700 dark:prose-li:text-gray-300
                    prose-a:font-inter prose-a:font-medium prose-a:text-blue-600 dark:prose-a:text-blue-400
                    prose-strong:font-inter prose-strong:font-semibold
                    prose-code:font-mono prose-code:text-pink-600 dark:prose-code:text-pink-400 prose-code:font-medium
                    prose-pre:bg-gray-900 dark:prose-pre:bg-gray-950 prose-pre:font-mono">
          <Content />
        </div>
      </div>
    </div>

    <!-- TOC Fixed -->
    {headings.length > 0 && (
      <aside class="toc-wrapper">
        <TOC headings={headings} title={lang === 'es' ? 'Tabla de Contenidos' : 'Table of Contents'} inline={false} />
      </aside>
    )}

    <!-- Writeups Relacionados -->
    {relatedWriteups.length > 0 && (
      <section class="related-writeups-section">
        <RelatedWriteups 
          writeups={relatedWriteups} 
          title={lang === 'es' ? 'Writeups Relacionados' : 'Related Writeups'}
          lang={lang as string}
        />
      </section>
    )}
  </article>
</Layout>

