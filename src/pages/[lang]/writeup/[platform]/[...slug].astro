  .main-content :global(li),
  .main-content :global(td),
  .main-content :global(th) {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  /* ========================================
     TABLE OF CONTENTS (TOC)
     ======================================== */
