    flex-wrap: wrap;
    gap: 0.375rem;
    flex: 1;
  }

  .metadata-tag {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    padding: 0.25rem 0.625rem;
    border-radius: 0.375rem;
    font-size: 0.6875rem;
    font-weight: 600;
    border: 1px solid;
