    font-size: 0.875rem;
    background-color: transparent !important;
    padding: 0;
  }

  .main-content :global(table) {
    border-radius: 0.5rem;
    overflow: hidden;
  }

  /* ========================================
     RESPONSIVE DESIGN
     ======================================== */
  
  /* Tablets y pantallas medianas */
  @media (max-width: 1600px) {
    .toc-wrapper {
      display: none;
    }
  }

  @media (max-width: 1024px) {
    .writeup-article {
      padding: 1.5rem;
    }

    .hero-image-container {
      max-width: 100%;
    }

    .writeup-title {
      font-size: 2.25rem;
    }

    .content-container {
      max-width: 100%;
    }
  }
  
  /* Mobile - Tablets peque√±as */
  @media (max-width: 768px) {
    .writeup-article {
      padding: 1rem;
    }

