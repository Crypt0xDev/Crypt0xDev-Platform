      max-width: 100%;
      margin-bottom: 1.5rem;
      border-radius: 0.5rem;
    }

    .writeup-title {
      font-size: 1.75rem;
      line-height: 1.3;
    }

    .writeup-description {
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    .badges-row {
      gap: 0.375rem;
    }

    .badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.625rem;
    }

    .metadata-row {
      font-size: 0.75rem;
      gap: 1rem;
    }

    .metadata-container {
      padding: 0.875rem 1rem;
      margin-top: 1rem;
    }

    .metadata-title {
      font-size: 0.6875rem;
    }

    .metadata-tag {
      font-size: 0.625rem;
      padding: 0.1875rem 0.5rem;
    }

