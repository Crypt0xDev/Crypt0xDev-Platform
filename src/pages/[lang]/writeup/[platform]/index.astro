function getCategoryIcon(category: string): string {
  const config = categoryConfig[category] || categoryConfig.other;
  return config.icon;
}

// Funci√≥n para obtener imagen de categor√≠a (si existe)
function getCategoryImage(platformId: string, category: string): string | null {
  const platformData = Object.values(PLATFORMS).find(p => p.id === platformId);
  if (platformData && 'categoryIcons' in platformData) {
    const categoryIcons = platformData.categoryIcons as Record<string, string>;
    return categoryIcons[category] || null;
  }
  return null;
}

// Obtener imagen de plataforma desde configuraci√≥n
const platformLogo = 'logo' in platform ? platform.logo as string : undefined;

// Estad√≠sticas
const difficultyColors = {
  easy: '#10b981',
  medium: '#f59e0b',
  hard: '#ef4444',
  insane: '#8b5cf6'
};

const difficultyCounts = {
  easy: platformWriteups.filter(w => w.data.difficulty === 'easy').length,
  medium: platformWriteups.filter(w => w.data.difficulty === 'medium').length,
  hard: platformWriteups.filter(w => w.data.difficulty === 'hard').length,
  insane: platformWriteups.filter(w => w.data.difficulty === 'insane').length,
};

// Funci√≥n para limpiar el slug
function getCleanSlug(fullSlug: string): string {
  const parts = fullSlug.split('/');
  // slug viene como "es/hackthebox/codify" -> queremos solo "codify"
  return parts.slice(2).join('/');
}
---

