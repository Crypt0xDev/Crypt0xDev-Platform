// Obtener categor√≠as disponibles para esta plataforma con conteo de dificultad
const availableCategories = platform.categories.map(catId => {
  const categoryWriteups = platformWriteups.filter(w => w.data.category === catId);
  const count = categoryWriteups.length;
  const config = categoryConfig[catId] || categoryConfig.other;
  
  return {
    id: catId,
    name: config.name[lang as 'es' | 'en'],
    description: config.description[lang as 'es' | 'en'],
    icon: config.icon,
    gradient: config.gradient,
    bgColor: config.bgColor,
    borderColor: config.borderColor,
    count,
    difficulties: {
      easy: categoryWriteups.filter(w => w.data.difficulty === 'easy').length,
      medium: categoryWriteups.filter(w => w.data.difficulty === 'medium').length,
      hard: categoryWriteups.filter(w => w.data.difficulty === 'hard').length,
