</Layout>

<style>
  .bg-grid-white\/5 {
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
  }
  
  .bg-grid-16 {
    background-size: 16px 16px;
  }
</style>

<script>
  // Filtrado por categor√≠a (client-side)
  let activeCategory: string | null = null;

  (window as any).filterByCategory = function(button: HTMLButtonElement) {
    const category = button.dataset.category;
    const cards = document.querySelectorAll('.writeup-card');
    const buttons = document.querySelectorAll('.category-card');

    // Toggle category
    if (activeCategory === category) {
      activeCategory = null;
      buttons.forEach(btn => btn.classList.remove('active'));
      cards.forEach(card => (card as HTMLElement).style.display = '');
    } else {
      activeCategory = category || null;
      buttons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      cards.forEach(card => {
        const cardCategory = (card as HTMLElement).dataset.category;
        (card as HTMLElement).style.display = cardCategory === category ? '' : 'none';
      });
    }
  };
</script>

