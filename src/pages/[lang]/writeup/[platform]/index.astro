---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Breadcrumb from '@components/common/Breadcrumb.astro';
import { useTranslations } from '@i18n/core';
import { sortByDate, filterByLang } from '@i18n/utils';
import { PLATFORMS, getPlatform, type PlatformId } from '@i18n/constants/platforms';

export async function getStaticPaths() {
  const platforms: PlatformId[] = ['htb', 'tryhackme', 'vulnhub', 'hackmyvm', 'portswigger'];
  const languages = ['es', 'en'];
  const paths = [];

  for (const platformId of platforms) {
    for (const lang of languages) {
      const platform = getPlatform(platformId);
      paths.push({
        params: { lang, platform: platform.slug },
        props: { platformId, platform }
      });
    }
  }

  return paths;
}

const { lang } = Astro.params;
const { platformId, platform } = Astro.props as { platformId: PlatformId; platform: typeof PLATFORMS[PlatformId] };
const t = useTranslations(lang as 'es' | 'en');

// Obtener todos los writeups de la plataforma
const allWriteups = await getCollection('writeups');
const platformWriteups = sortByDate(
  filterByLang(allWriteups, lang as string).filter(w => {
    // El slug es: es/hackthebox/codify
    const slugParts = w.slug.split('/');
    const platformSlugInFile = slugParts[1]; // hackthebox
    return platformSlugInFile === platform.slug; // Comparar con 'hackthebox'
  })
);

