---
import { getCollection } from 'astro:content';
import Layout from '../../../../../layouts/Layout.astro';
import Card from '../../../../../components/shared/Card.astro';
import { useTranslations } from '../../../../../i18n/core';
import { sortByDate, filterByLang } from '../../../../../i18n/utils';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');

// Obtener writeups de HTB Machines
const allWriteups = await getCollection('writeups');
const machinesWriteups = sortByDate(
  filterByLang(allWriteups, lang as string).filter(w => 
    w.data.platform === 'htb' && w.data.category === 'machines'
  )
);

const difficultyColors = {
  easy: '#10b981',
  medium: '#f59e0b',
  hard: '#ef4444',
  insane: '#8b5cf6'
};
---

<Layout
  title={lang === 'es' ? 'M치quinas' : 'Machines'}
  description={lang === 'es' ? 'Writeups de m치quinas de HackTheBox' : 'HackTheBox machines writeups'}
  lang={lang}
>
  <main class="machines-page">
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="breadcrumb">
        <a href={`/${lang}/writeup`}>{t('writeups.title')}</a>
        <span class="separator">/</span>
        <a href={`/${lang}/writeup/hackthebox`}>HackTheBox</a>
        <span class="separator">/</span>
        <span class="current">{lang === 'es' ? 'M치quinas' : 'Machines'}</span>
      </nav>

      <!-- Header -->
      <header class="page-header">
        <div class="header-content">
          <div class="icon">游눹</div>
          <h1>{lang === 'es' ? 'M치quinas HackTheBox' : 'HackTheBox Machines'}</h1>
          <p class="subtitle">
            {lang === 'es' 
              ? 'Writeups detallados de m치quinas de HackTheBox' 
              : 'Detailed HackTheBox machines writeups'
            }
          </p>
          <div class="stats">
            <span class="stat-badge">
              游닍 {machinesWriteups.length} {lang === 'es' ? 'M치quinas' : 'Machines'}
            </span>
          </div>
        </div>
      </header>

      <!-- Grid de writeups -->
      {machinesWriteups.length > 0 ? (
        <div class="writeups-grid">
          {machinesWriteups.map((writeup) => {
            // El slug es "es/hackthebox/sau", necesitamos solo "sau"
            const machineName = writeup.slug.split('/').slice(2).join('/');
            return (
              <Card
                title={writeup.data.title}
                description={writeup.data.description}
                date={writeup.data.pubDate}
                image={writeup.data.heroImage}
                href={`/${lang}/writeup/hackthebox/${machineName}`}
                tags={writeup.data.tags}
              />
            );
          })}
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-icon">游닔</div>
          <p>{lang === 'es' ? 'No hay writeups de m치quinas disponibles a칰n' : 'No machine writeups available yet'}</p>
        </div>
      )}
    </div>
  </main>
</Layout>

<style>
  .machines-page {
    min-height: 100vh;
    padding: 2rem 0 4rem;
    background: var(--bg-color);
    position: relative;
  }

  /* Grid de fondo estilo hacker - sutil */
  .machines-page::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(rgba(159, 239, 0, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(159, 239, 0, 0.015) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
    z-index: 0;
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    padding: 0.875rem 1.25rem;
    background: linear-gradient(135deg, 
      rgba(159, 239, 0, 0.08), 
      rgba(159, 239, 0, 0.04)
    );
    border-radius: 12px;
    border: 1px solid rgba(159, 239, 0, 0.2);
    animation: fadeInDown 0.5s ease-out;
    width: fit-content;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .breadcrumb::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(159, 239, 0, 0.15),
      transparent
    );
    transition: left 0.5s;
  }

  .breadcrumb:hover::before {
    left: 100%;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .breadcrumb a {
    color: #9fef00;
    text-decoration: none;
    transition: all 0.2s;
    font-weight: 600;
    position: relative;
  }

  .breadcrumb a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #9fef00;
    transition: width 0.3s ease;
  }

  .breadcrumb a:hover::after {
    width: 100%;
  }

  .breadcrumb a:hover {
    color: #c1ff3d;
  }

  .separator {
    color: rgba(159, 239, 0, 0.4);
    opacity: 0.7;
  }

  .current {
    font-weight: 600;
    color: var(--text-color);
  }

  .page-header {
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease-out;
    background: linear-gradient(135deg, 
      rgba(159, 239, 0, 0.06), 
      rgba(159, 239, 0, 0.02)
    );
    border: 2px solid rgba(159, 239, 0, 0.25);
    border-radius: 24px;
    padding: 3rem 2rem;
    box-shadow: 
      0 8px 24px rgba(159, 239, 0, 0.1),
      inset 0 1px 0 rgba(159, 239, 0, 0.1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  /* Borde lateral animado */
  .page-header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(
      180deg,
      transparent 0%,
      #9fef00 50%,
      transparent 100%
    );
    animation: borderScan 2s ease-in-out infinite;
  }

  @keyframes borderScan {
    0%, 100% {
      opacity: 0.4;
      transform: scaleY(0.8);
    }
    50% {
      opacity: 1;
      transform: scaleY(1);
    }
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(159, 239, 0, 0.12),
      transparent
    );
    animation: shimmer 4s infinite;
  }

  @keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .header-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    display: inline-block;
    animation: float 3s ease-in-out infinite;
    filter: drop-shadow(0 4px 8px rgba(159, 239, 0, 0.2));
    transition: filter 0.3s ease;
  }

  .icon:hover {
    filter: drop-shadow(0 8px 16px rgba(159, 239, 0, 0.3));
    animation: bounce 0.6s ease;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    25% { transform: translateY(-15px); }
    50% { transform: translateY(0); }
    75% { transform: translateY(-8px); }
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
    color: #9fef00;
    position: relative;
    display: inline-block;
    animation: titleAppear 0.8s ease-out;
  }

  @keyframes titleAppear {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  h1::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(159, 239, 0, 0.6), 
      transparent
    );
    animation: underlineExpand 1s ease-out 0.3s forwards;
  }

  @keyframes underlineExpand {
    to {
      width: 80%;
    }
  }

  .subtitle {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .stats {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .stat-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, rgba(159, 239, 0, 0.15), rgba(159, 239, 0, 0.08));
    border: 2px solid rgba(159, 239, 0, 0.3);
    border-radius: 14px;
    font-weight: 700;
    color: #9fef00;
    box-shadow: 0 4px 12px rgba(159, 239, 0, 0.12);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .stat-badge::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(159, 239, 0, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .stat-badge:hover::before {
    width: 300px;
    height: 300px;
  }

  .stat-badge:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 24px rgba(159, 239, 0, 0.25);
    border-color: #9fef00;
  }

  .writeups-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    animation: fadeIn 0.8s ease-out;
  }

  /* Animaci칩n escalonada para las cards */
  .writeups-grid > :global(*) {
    animation: slideInUp 0.6s ease-out both;
  }

  .writeups-grid > :global(*:nth-child(1)) { animation-delay: 0.1s; }
  .writeups-grid > :global(*:nth-child(2)) { animation-delay: 0.2s; }
  .writeups-grid > :global(*:nth-child(3)) { animation-delay: 0.3s; }
  .writeups-grid > :global(*:nth-child(4)) { animation-delay: 0.4s; }
  .writeups-grid > :global(*:nth-child(5)) { animation-delay: 0.5s; }
  .writeups-grid > :global(*:nth-child(6)) { animation-delay: 0.6s; }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    animation: fadeIn 0.6s ease-out;
    background: linear-gradient(135deg, 
      rgba(159, 239, 0, 0.04), 
      rgba(159, 239, 0, 0.02)
    );
    border: 2px dashed rgba(159, 239, 0, 0.25);
    border-radius: 24px;
    position: relative;
    overflow: hidden;
  }

  .empty-state::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(159, 239, 0, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(159, 239, 0, 0.02) 1px, transparent 1px);
    background-size: 20px 20px;
    opacity: 0.5;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    opacity: 0.3;
    animation: float 3s ease-in-out infinite;
    position: relative;
    z-index: 1;
  }

  .empty-state p {
    font-size: 1.125rem;
    color: var(--text-muted);
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 2rem 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    .icon {
      font-size: 3rem;
    }

    .breadcrumb {
      font-size: 0.8rem;
      padding: 0.625rem 1rem;
    }

    .writeups-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
