---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Breadcrumb from '@components/common/Breadcrumb.astro';
import { getLangFromUrl, useTranslations } from '@i18n/core';
import { formatDate, sortByDate, filterByLang } from '@i18n/utils';
import { BLOG_CATEGORIES } from '@i18n/constants/categories';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');

// Obtener todos los posts del blog
const allPosts = await getCollection('blog');
const posts = sortByDate(filterByLang(allPosts, lang as string));

// Obtener par√°metros de filtro de la URL
const url = Astro.url;
const categoryFilter = url.searchParams.get('category');

// Filtrar por categor√≠a si se especifica
const filteredPosts = categoryFilter 
  ? posts.filter(p => p.data.category === categoryFilter)
  : posts;

// Preparar categor√≠as con conteo para mostrar filtros
const categories = Object.values(BLOG_CATEGORIES).map(cat => ({
  ...cat,
  count: posts.filter(p => p.data.category === cat.id).length
}));
---

<Layout
  title={t('blog.title')}
  description={t('blog.latest_posts')}
  lang={lang}
>
  <main class="min-h-[calc(100vh-16rem)] bg-gradient-to-br from-white via-white to-indigo-50/20 dark:from-slate-900 dark:via-slate-900 dark:to-indigo-950/10">
    <!-- Hero Section -->
    <section class="py-12 md:py-16">
      <div class="container max-w-7xl mx-auto px-4">
        <!-- Breadcrumb -->
        <Breadcrumb items={[
          { label: lang === 'es' ? 'Inicio' : 'Home', href: `/${lang}` },
          { label: 'Blog' }
        ]} />

        <div class="mb-12">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 rounded-full text-sm font-semibold mb-6">
            üìù {lang === 'es' ? 'Blog de Ciberseguridad' : 'Cybersecurity Blog'}
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-4 font-sans tracking-tight bg-gradient-to-r from-slate-900 via-indigo-600 to-slate-900 dark:from-slate-100 dark:via-indigo-400 dark:to-slate-100 bg-clip-text text-transparent">
            {t('blog.title')}
          </h1>
          <div class="max-w-3xl">
            <p class="text-lg md:text-xl text-slate-700 dark:text-slate-300 leading-relaxed mb-6">
              {lang === 'es' 
                ? 'Aprende sobre ciberseguridad con tutoriales, writeups detallados, investigaciones y las √∫ltimas noticias sobre hacking √©tico y pentesting.'
                : 'Learn about cybersecurity with tutorials, detailed writeups, research, and the latest news on ethical hacking and pentesting.'}
            </p>
            
            <!-- Stats Grid -->
            <div class="grid grid-cols-3 gap-4 mb-8">
              <div class="bg-white dark:bg-slate-800 rounded-xl p-4 border border-slate-200 dark:border-slate-700">
                <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">{posts.length}</div>
                <div class="text-sm text-slate-600 dark:text-slate-400">{lang === 'es' ? 'Art√≠culos' : 'Posts'}</div>
              </div>
              <div class="bg-white dark:bg-slate-800 rounded-xl p-4 border border-slate-200 dark:border-slate-700">
                <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">{categories.filter(c => c.count > 0).length}</div>
                <div class="text-sm text-slate-600 dark:text-slate-400">{lang === 'es' ? 'Categor√≠as' : 'Categories'}</div>
              </div>
              <div class="bg-white dark:bg-slate-800 rounded-xl p-4 border border-slate-200 dark:border-slate-700">
                <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">{categories.length}</div>
                <div class="text-sm text-slate-600 dark:text-slate-400">{lang === 'es' ? 'Temas' : 'Topics'}</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Categories Grid -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold mb-6 text-slate-900 dark:text-white">
            {lang === 'es' ? 'üìÇ Categor√≠as de Contenido' : 'üìÇ Content Categories'}
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-16">
          {categories.map((category, index) => {
            const postsInCategory = posts.filter(p => p.data.category === category.id);
            const difficulties = {
              beginner: postsInCategory.filter(p => p.data.difficulty === 'beginner').length,
              intermediate: postsInCategory.filter(p => p.data.difficulty === 'intermediate').length,
              advanced: postsInCategory.filter(p => p.data.difficulty === 'advanced').length
            };
            
            return (
              <a 
                href={`/${lang}/blog/${category.id}`}
                class={`group relative overflow-hidden rounded-2xl border-2 border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 p-6 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:border-indigo-500 dark:hover:border-indigo-500`}
              >
                <div class="relative z-10">
                  <div class="w-16 h-16 mb-4 flex items-center justify-center bg-slate-50 dark:bg-slate-700/50 rounded-xl">
                    <span class="text-4xl">{category.icon}</span>
                  </div>
                  <h3 class="text-xl font-bold mb-2 text-slate-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                    {category.label[lang as 'es' | 'en']}
                  </h3>
                  <div class="flex items-center justify-between mb-4">
                    <span class={`text-sm font-semibold ${category.color}`}>
                      {category.count} {lang === 'es' ? (category.count === 1 ? 'post' : 'posts') : (category.count === 1 ? 'post' : 'posts')}
                    </span>
                    <svg class="w-5 h-5 text-slate-400 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  
                  {category.count > 0 && (
                    <div class="flex flex-wrap gap-1 mt-3">
                      {difficulties.beginner > 0 && (
                        <span class="text-xs px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full">
                          {difficulties.beginner} {lang === 'es' ? 'b√°sico' : 'beginner'}
                        </span>
                      )}
                      {difficulties.intermediate > 0 && (
                        <span class="text-xs px-2 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 rounded-full">
                          {difficulties.intermediate} {lang === 'es' ? 'intermedio' : 'intermediate'}
                        </span>
                      )}
                      {difficulties.advanced > 0 && (
                        <span class="text-xs px-2 py-1 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 rounded-full">
                          {difficulties.advanced} {lang === 'es' ? 'avanzado' : 'advanced'}
                        </span>
                      )}
                    </div>
                  )}
                </div>
                <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-500 opacity-0 group-hover:opacity-5 transition-opacity duration-300"></div>
              </a>
            );
          })}
        </div>
      </div>
    </section>

    {posts.length === 0 && (
      <section class="py-16">
        <div class="container max-w-7xl mx-auto px-4">
          <div class="text-center py-16 bg-white dark:bg-slate-800 rounded-2xl border-2 border-dashed border-slate-300 dark:border-slate-700">
            <div class="text-6xl mb-4">üìù</div>
            <h3 class="text-2xl font-bold mb-2 text-slate-900 dark:text-white">
              {lang === 'es' ? 'Pr√≥ximamente' : 'Coming Soon'}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
              {lang === 'es' 
                ? 'Estamos preparando contenido incre√≠ble. ¬°Vuelve pronto!' 
                : 'We are preparing amazing content. Come back soon!'}
            </p>
          </div>
        </div>
      </section>
    )}
  </main>
</Layout>
