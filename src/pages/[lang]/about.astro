---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../../i18n/core';
import { filterByLang } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');

const allWriteups = await getCollection('writeups');
const allBlog = await getCollection('blog');
const allCtf = await getCollection('ctf');

const writeups = filterByLang(allWriteups, lang as string);
const blog = filterByLang(allBlog, lang as string);
const ctf = filterByLang(allCtf, lang as string);

const platforms = {
  htb: writeups.filter(w => w.data.platform === 'htb').length,
  tryhackme: writeups.filter(w => w.data.platform === 'tryhackme').length,
  vulnhub: writeups.filter(w => w.data.platform === 'vulnhub').length,
  hackmyvm: writeups.filter(w => w.data.platform === 'hackmyvm').length,
};

const totalPlatforms = Object.values(platforms).filter(v => v > 0).length;
