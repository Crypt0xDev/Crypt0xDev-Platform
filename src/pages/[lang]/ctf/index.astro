---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Breadcrumb from '@components/common/Breadcrumb.astro';
import { getLangFromUrl, useTranslations } from '@i18n/core';
import { formatDate, sortByDate, filterByLang } from '@i18n/utils';
import { DYNAMIC_CTF_CATEGORIES, type DynamicCTFCategory } from '@i18n/constants';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');

// Obtener solo los CTF writeups del idioma actual
const allCtf = await getCollection('ctf');
const ctfWriteups = sortByDate(filterByLang(allCtf, lang as 'es' | 'en'));

// Usar categor√≠as CTF din√°micas desde configuraci√≥n centralizada
const ctfCategories = DYNAMIC_CTF_CATEGORIES.map((cat: DynamicCTFCategory) => ({
  id: cat.id,
  title: cat.name[lang as 'es' | 'en'],
  description: cat.description[lang as 'es' | 'en'],
  icon: cat.icon,
  color: cat.gradient,
  bgColor: cat.bgColor,
  borderColor: cat.borderColor
}));

// Contar writeups por categor√≠a
const categoryCounts = ctfCategories.map((category: any) => ({
  ...category,
  count: ctfWriteups.filter((w: any) => w.data.category === category.id).length,
  difficulties: {
    easy: ctfWriteups.filter((w: any) => w.data.category === category.id && w.data.difficulty === 'easy').length,
    medium: ctfWriteups.filter((w: any) => w.data.category === category.id && w.data.difficulty === 'medium').length,
    hard: ctfWriteups.filter((w: any) => w.data.category === category.id && w.data.difficulty === 'hard').length
  }
}));
// Mostrar todas las categor√≠as, incluso las que no tienen writeups

// Obtener CTFs √∫nicos
const uniqueCtfs = [...new Set(ctfWriteups.map(w => w.data.ctfName))];
---

<Layout
  title={lang === 'es' ? 'CTF Writeups' : 'CTF Writeups'}
  description={lang === 'es' ? 'Writeups de retos de Capture The Flag' : 'Capture The Flag challenge writeups'}
  lang={lang}
>
  <main class="min-h-[calc(100vh-16rem)] bg-gradient-to-br from-white via-white to-red-50/20 dark:from-slate-900 dark:via-slate-900 dark:to-red-950/10">
    <!-- Hero Section -->
    <section class="py-12 md:py-16">
      <div class="container max-w-7xl mx-auto px-4">
        <!-- Breadcrumb -->
        <Breadcrumb items={[
          { label: lang === 'es' ? 'Inicio' : 'Home', href: `/${lang}` },
          { label: 'CTF' }
        ]} />

        <div class="mb-12">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 rounded-full text-sm font-semibold mb-6">
            üö© Capture The Flag
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-4 font-sans tracking-tight bg-gradient-to-r from-slate-900 via-red-600 to-slate-900 dark:from-slate-100 dark:via-red-400 dark:to-slate-100 bg-clip-text text-transparent">
            {lang === 'es' ? 'CTF Writeups' : 'CTF Writeups'}
          </h1>
          <div class="max-w-3xl">
            <p class="text-lg md:text-xl text-slate-700 dark:text-slate-300 leading-relaxed mb-6">
              {lang === 'es' 
                ? 'Soluciones detalladas de retos de Capture The Flag de diversas competiciones. Aprende t√©cnicas de hacking √©tico en m√∫ltiples categor√≠as como web, pwn, crypto, forensics y m√°s.'
                : 'Detailed solutions for Capture The Flag challenges from various competitions. Learn ethical hacking techniques across multiple categories like web, pwn, crypto, forensics and more.'}
            </p>
            
            <!-- Stats Grid -->
            <div class="grid grid-cols-3 gap-4 mb-8">
              <div class="bg-white dark:bg-slate-800 rounded-xl p-4 border border-slate-200 dark:border-slate-700">
                <div class="text-3xl font-bold text-red-600 dark:text-red-400">{ctfWriteups.length}</div>
                <div class="text-sm text-slate-600 dark:text-slate-400">{lang === 'es' ? 'Retos' : 'Challenges'}</div>
              </div>
              <div class="bg-white dark:bg-slate-800 rounded-xl p-4 border border-slate-200 dark:border-slate-700">
                <div class="text-3xl font-bold text-red-600 dark:text-red-400">{uniqueCtfs.length}</div>
                <div class="text-sm text-slate-600 dark:text-slate-400">{lang === 'es' ? 'CTFs' : 'CTFs'}</div>
              </div>
              <div class="bg-white dark:bg-slate-800 rounded-xl p-4 border border-slate-200 dark:border-slate-700">
                <div class="text-3xl font-bold text-red-600 dark:text-red-400">{ctfCategories.length}</div>
                <div class="text-sm text-slate-600 dark:text-slate-400">{lang === 'es' ? 'Categor√≠as' : 'Categories'}</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Categories Grid - Estilo Writeups -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold mb-6 text-slate-900 dark:text-white">
            {lang === 'es' ? 'üìÇ Categor√≠as de Retos' : 'üìÇ Challenge Categories'}
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          {categoryCounts.map((category: any) => {
            return (
              <a 
                href={`/${lang}/ctf/${category.id}`}
                class={`group relative overflow-hidden rounded-2xl border-2 ${category.borderColor} ${category.bgColor} p-6 transition-all duration-300 hover:scale-105 hover:shadow-2xl`}
              >
              <div class="relative z-10">
                <div class="w-16 h-16 mb-4 flex items-center justify-center bg-white/50 dark:bg-slate-800/50 rounded-xl">
                  <span class="text-4xl">{category.icon}</span>
                </div>
                <h3 class="text-xl font-bold mb-2 text-slate-900 dark:text-white">
                  {category.title}
                </h3>
                <p class="text-sm text-slate-600 dark:text-slate-400 mb-4 line-clamp-2">
                  {category.description}
                </p>
                <div class="flex items-center justify-between">
                  <span class={`text-sm font-semibold bg-gradient-to-r ${category.color} bg-clip-text text-transparent`}>
                    {category.count} {lang === 'es' ? (category.count === 1 ? 'reto' : 'retos') : (category.count === 1 ? 'challenge' : 'challenges')}
                  </span>
                  <svg class="w-5 h-5 text-slate-400 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
                
                {category.count > 0 && (
                  <div class="flex flex-wrap gap-1 mt-3">
                    {category.difficulties.easy > 0 && (
                      <span class="text-xs px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full">
                        {category.difficulties.easy} {lang === 'es' ? 'f√°cil' : 'easy'}
                      </span>
                    )}
                    {category.difficulties.medium > 0 && (
                      <span class="text-xs px-2 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 rounded-full">
                        {category.difficulties.medium} {lang === 'es' ? 'medio' : 'medium'}
                      </span>
                    )}
                    {category.difficulties.hard > 0 && (
                      <span class="text-xs px-2 py-1 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 rounded-full">
                        {category.difficulties.hard} {lang === 'es' ? 'dif√≠cil' : 'hard'}
                      </span>
                    )}
                  </div>
                )}
              </div>
              <div class={`absolute inset-0 bg-gradient-to-br ${category.color} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
            </a>
            );
          })}
        </div>
      </div>
    </section>

    {ctfWriteups.length === 0 && (
      <section class="py-16">
        <div class="container max-w-7xl mx-auto px-4">
          <div class="text-center py-16 bg-white dark:bg-slate-800 rounded-2xl border-2 border-dashed border-slate-300 dark:border-slate-700">
            <div class="text-6xl mb-4">üìù</div>
            <h3 class="text-2xl font-bold mb-2 text-slate-900 dark:text-white">
              {lang === 'es' ? 'Pr√≥ximamente' : 'Coming Soon'}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
              {lang === 'es' 
                ? 'Estamos preparando writeups de CTF. ¬°Vuelve pronto!' 
                : 'We are preparing CTF writeups. Come back soon!'}
            </p>
          </div>
        </div>
      </section>
    )}
  </main>
</Layout>
