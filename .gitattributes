# Auto detect text files and perform LF normalization
* text=auto

# Explicitly set line endings to CRLF for all text files
*.ts text eol=crlf
*.js text eol=crlf
*.mjs text eol=crlf
*.astro text eol=crlf
*.md text eol=crlf
*.json text eol=crlf
*.css text eol=crlf
*.html text eol=crlf
*.yaml text eol=crlf
*.yml text eol=crlf
*.toml text eol=crlf
*.txt text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
