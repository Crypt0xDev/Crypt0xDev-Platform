{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@i18n/*": ["src/i18n/*"],
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/i18n/utils/*"],
      "@types/*": ["src/i18n/types/*"],
      "@constants/*": ["src/i18n/constants/*"]
    }
  }
}
